generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = env("DATABASE_PROVIDER", "sqlite")
  // an explicit DATABASE_URL isn't required now; we default to local sqlite file
  url      = env("DATABASE_URL", "file:./dev.db")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  age       Int
  phone     String
  avatarUrl String?
  createdAt DateTime @default(now())
}
